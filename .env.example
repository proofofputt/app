# Database Configuration
# Replace with your actual database connection string
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# JWT Secret for token signing
# Use a strong, random secret key in production
JWT_SECRET="your-secure-jwt-secret-here"

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=your-email@domain.com
SENDGRID_FROM_NAME=Your App Name

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id-here
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret-here

# Frontend URL - REQUIRED for OAuth redirects
# This must match your actual frontend URL (including protocol)
# Production: https://app.proofofputt.com
# Local development: http://localhost:5173 (or your dev server port)
FRONTEND_URL=https://app.proofofputt.com

# OAuth Callback URLs (for reference)
# These must be registered in your OAuth provider settings:
# Google: https://your-domain.com/api/auth/google/callback
# LinkedIn: https://your-domain.com/api/auth/linkedin/callback
# Nostr: No callback needed (direct authentication)

# Analytics Reporting
# Email address to receive monthly analytics reports (optional)
REPORT_EMAIL_TO=your-email@domain.com

# Zaprite Payment Processing (Bitcoin/Lightning/Card)
# REQUIRED: Get these from your Zaprite dashboard at https://app.zaprite.com
ZAPRITE_API_KEY=zprt_live_your_api_key_here
ZAPRITE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
ZAPRITE_ORG_ID=org_your_organization_id_here
ZAPRITE_BASE_URL=https://api.zaprite.com

# Zaprite Subscription Plan IDs (create these in Zaprite dashboard first)
ZAPRITE_PLAN_BASIC=zaprite_plan_id_basic
ZAPRITE_PLAN_PREMIUM=zaprite_plan_id_premium
ZAPRITE_PLAN_FULL_SUBSCRIBER=zaprite_plan_id_full
# Optional: Annual plan IDs (if different from monthly)
ZAPRITE_PLAN_BASIC_ANNUAL=zaprite_plan_id_basic_annual
ZAPRITE_PLAN_PREMIUM_ANNUAL=zaprite_plan_id_premium_annual
ZAPRITE_PLAN_FULL_SUBSCRIBER_ANNUAL=zaprite_plan_id_full_annual

# Cron Job Security (for Vercel Cron Jobs)
# Generate a random secret for securing cron endpoints
CRON_SECRET=your_random_cron_secret_here

# Environment
NODE_ENV=development

# Optional: Skip environment validation (not recommended for production)
# SKIP_ENV_VALIDATION=false

# Health Check Endpoint
# Access at: https://your-domain.com/api/health/zaprite
# No authentication required - returns status of all Zaprite integration components

# =============================================================================
# ArkadeOS Bitcoin Integration (DISABLED IN PRODUCTION - FOR TESTING ONLY)
# =============================================================================
# IMPORTANT: Bitcoin payment features are currently in development and
# MUST remain disabled in production. Only enable for local testing.
#
# To test locally:
# 1. Start Nigiri: docker-compose -f docker-compose.nigiri.yml up -d
# 2. Set ARKADE_ENABLED=true in .env.development.local (gitignored)
# 3. Use local Arkade server at http://localhost:7070
#
# Test Networks (when ready for testnet):
# - Mutinynet: https://mutinynet.arkade.sh
# - Signet: https://signet.arkade.sh
#
ARKADE_ENABLED=false
ARKADE_NETWORK=local
ARKADE_SERVER_URL=http://localhost:7070
# ARKADE_IDENTITY_SECRET=your_hex_secret_here (DO NOT COMMIT REAL SECRET)

# Platform Fees (percentage of transaction)
PLATFORM_FEE_DUELS=3
PLATFORM_FEE_LEAGUES=5
PLATFORM_FEE_FUNDRAISING=2